# Dockerfile.frontend
FROM node:20-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci

# Copia el resto del frontend
COPY . .

# Evita que Vite lea NODE_ENV desde .env (si se col√≥)
RUN if [ -f .env ]; then sed -i '/^NODE_ENV=/d' .env ; fi

# Pasa API URL en build (ver compose abajo)
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}

RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
